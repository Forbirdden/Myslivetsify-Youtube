{
    "manifest_version": 2,
    "name": "YouTube Myslivetsify",
    "version": "1.1.0",
    "icons": {
        "96": "icon.png"
    },
    "description": "На превью любого видео на YouTube теперь будет Дымка!",
    "browser_action": {
        "default_popup": "settings.html"
    },
    "permissions": [
        "storage",
        "*://*.youtube.com/*"
    ],
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": ["myslivetsify.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "images/*.png",
        "images/*.json"
    ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-myslivetsify@forbirdden.rf.gd",
    	"data_collection_permissions": {
    	  "required": ["none"]
    	},
	"update_url": "https://raw.githubusercontent.com/Forbirdden/Myslivetsify-Youtube/refs/heads/main/updates.json"
    }
  }
}